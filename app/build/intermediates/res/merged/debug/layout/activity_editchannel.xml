<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    tools:context="de.kochon.enrico.secrettalkmessenger.activities.EditChannelActivity"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <LinearLayout
              android:layout_marginTop="@dimen/vertical_spacer"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/app_foreground"
                        android:text="@string/textChannelID" />
                    
                        <TextView
                        android:id="@+id/viewChannelID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_foreground"
                        android:inputType="text"/>
                
            </LinearLayout>
                
            <LinearLayout
              android:layout_marginTop="@dimen/vertical_spacer"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/app_foreground"
                        android:text="@string/textChannelName" />
                    
                        <TextView
                        android:id="@+id/viewChannelName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_foreground"
                        android:inputType="text"/>
                
            </LinearLayout>
                
            <LinearLayout
              android:layout_marginTop="@dimen/vertical_spacer"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/app_foreground"
                        android:text="@string/textChannelProtocol" />
                    
                        <TextView
                        android:id="@+id/viewChannelProtocol"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_foreground"
                        android:inputType="text"/>
                
            </LinearLayout>

            <LinearLayout
              android:layout_marginTop="@dimen/vertical_spacer"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/app_foreground"
                        android:text="@string/textChannelEndpoint" />
                    
                        <EditText
                        android:id="@+id/editChannelEndpoint"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_foreground"
                        android:inputType="text"/>
                
            </LinearLayout>


            <Button
              android:id="@+id/buttonEditChannelOk"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/vertical_spacer"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:text="@string/btncaptionOK" />
                
   </LinearLayout>
</ScrollView>
