<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    tools:context="de.kochon.enrico.secrettalkmessenger.activities.CreateNewConversationActivity"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/progress_spinner_createnewconv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:indeterminate="true"
            android:visibility="gone" />

            <LinearLayout
              android:layout_marginTop="@dimen/vertical_spacer"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
            
                    <TextView
                        android:id="@+id/textNewConversationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/app_foreground"
                        android:text="@string/textNewConversationName" />
                    
                        <EditText
                        android:id="@+id/editNewConversationName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_foreground"
                        android:text=""
                        android:inputType="text"/>
                
            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/vertical_spacer"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textNewConversationSendingFish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/app_foreground"
                android:text="@string/textNewConversationSendingFish" />

            <EditText
                android:id="@+id/editNewConversationSendingFish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_foreground"
                android:text=""
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/vertical_spacer"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textNewConversationReceivingFish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/app_foreground"
                android:text="@string/textNewConversationReceivingFish" />

            <EditText
                android:id="@+id/editNewConversationReceivingFish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_foreground"
                android:text=""
                android:inputType="text"/>

        </LinearLayout>



        <Button
              android:id="@+id/buttonCreateNewConversationActivityOk"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/vertical_spacer"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:text="@string/btncaptionOK" />
                
   </LinearLayout>
</ScrollView>
